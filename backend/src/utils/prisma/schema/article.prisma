model Article {
    id            String    @id @default(uuid())
    title         String    @db.VarChar(255)
    slug          String    @db.VarChar(255)
    content       String    @db.Text
    featuredImage String?   @map("featured_image") @db.VarChar(255)
    authorId      String    @map("author_id")
    categoryId    String    @map("category_id")
    customAuthor  String    @map("custom_author") @db.VarChar(255)
    publishedAt   DateTime? @map("published_at") @db.Timestamp()
    deletedAt     DateTime? @map("deleted_at") @db.Timestamp()

    // Relations
    category Category @relation(fields: [categoryId], references: [idKategori], onDelete: Restrict)
    author   Author   @relation(fields: [authorId], references: [id], onDelete: Restrict) // Changed from User to Author

    createdAt DateTime @default(now()) @map("created_at") @db.Timestamp()
    updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp()

    @@map("articles")
}